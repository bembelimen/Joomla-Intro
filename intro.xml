<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_INTRO</name>
    <version>2.5.2</version>
    <author>Projekt Waterkant, based on the Plugin from JoomlaHatesMe</author>
    <creationDate>September 2012</creationDate>
    <authorEmail>kontakt@projektwaterkant.de</authorEmail>
    <authorUrl>www.projektwaterkant.de</authorUrl>
    <copyright>Copyright (C) 2012 Projekt Waterkant. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <description>PLG_SYSTEM_INTRO_XML_DESCRIPTION</description>
    <files>
        <filename plugin="intro">intro.php</filename>
        <filename>index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="intro"
                    type="textarea"
                    filter="safehtml"
                    cols="30"
                    rows="5"
                    label="PLG_SYSTEM_INTRO_HTML_INPUT"
                    description="PLG_SYSTEM_INTRO_HTML_INPUT_DESCRIPTION"/>
                <field
                    name="session"
                    type="radio"
                    default="1"
                    label="PLG_SYSTEM_INTRO_SESSION_KEEPALIVE"
                    description="PLG_SYSTEM_INTRO_SESSION_KEEPALIVE_DESCRIPTION">
                    <option
                        value="0">JNo
                    </option>
                    <option
                        value="1">JYes
                    </option>
                </field>
                <field
                    name="nobots"
                    type="list"
                    default="1"
                    label="PLG_SYSTEM_INTRO_DISALLOW_BOTS"
                    description="PLG_SYSTEM_INTRO_DISALLOW_BOTS_DESCRIPTION">
                    <option
                        value="1">JYES
                    </option>
                    <option
                        value="0">JNO
                    </option>
                </field>
                <field
                    name="botslist"
                    type="text"
                    default="bot,spider,crawler,libwww,search,archive,slurp,teoma,facebook,twitter"
                    label="PLG_SYSTEM_INTRO_BOT_LIST"
                    description="PLG_SYSTEM_INTRO_BOT_LIST_DESCRIPTION" />
            </fieldset>
        </fields>
    </config>

</extension>